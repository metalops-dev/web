---
interface PostLink {
	title: string;
	slug: string;
}

interface Props {
	prev?: PostLink;
	next?: PostLink;
}

const { prev, next } = Astro.props;
---

{(prev || next) && (
	<nav class="post-nav">
		<div class="post-nav-item prev">
			{prev && (
				<a href={`/blog/${prev.slug}/`}>
					<span class="label">← Previous</span>
					<span class="title">{prev.title}</span>
				</a>
			)}
		</div>
		<div class="post-nav-item next">
			{next && (
				<a href={`/blog/${next.slug}/`}>
					<span class="label">Next →</span>
					<span class="title">{next.title}</span>
				</a>
			)}
		</div>
	</nav>
)}

<style>
	.post-nav {
		display: flex;
		gap: 1rem;
		margin-top: 3rem;
		padding-top: 2rem;
		border-top: 2px solid var(--border);
	}
	.post-nav-item {
		flex: 1;
	}
	.post-nav-item.next {
		text-align: right;
	}
	.post-nav-item a {
		display: block;
		text-decoration: none;
		padding: 1rem;
		border: 2px solid var(--border);
	}
	.post-nav-item a:hover {
		background: var(--fg);
		color: var(--bg);
	}
	.label {
		display: block;
		font-size: 0.8rem;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--muted);
		margin-bottom: 0.25rem;
	}
	.post-nav-item a:hover .label {
		color: var(--bg);
	}
	.title {
		font-weight: 500;
	}
	@media (max-width: 600px) {
		.post-nav {
			flex-direction: column;
		}
		.post-nav-item.next {
			text-align: left;
		}
	}
</style>
