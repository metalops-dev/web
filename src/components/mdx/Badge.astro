---
interface Props {
	type?: "default" | "success" | "warning" | "error" | "info";
}

const { type = "default" } = Astro.props;
---

<span class={`badge badge-${type}`}><slot /></span>

<style>
	.badge {
		display: inline-block;
		padding: 0.125rem 0.5rem;
		font-family: var(--font-mono);
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		border: 1px solid var(--border);
	}
	.badge-default {
		background: var(--code-bg);
		color: var(--fg);
	}
	.badge-success {
		background: #22c55e20;
		color: #22c55e;
		border-color: #22c55e;
	}
	.badge-warning {
		background: #f59e0b20;
		color: #f59e0b;
		border-color: #f59e0b;
	}
	.badge-error {
		background: #ef444420;
		color: #ef4444;
		border-color: #ef4444;
	}
	.badge-info {
		background: #3b82f620;
		color: #3b82f6;
		border-color: #3b82f6;
	}
</style>
