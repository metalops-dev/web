---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import readingData from "../data/reading.yaml";

const title = "Reading";
const description = "Books, articles, and papers I'm reading";
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		<main>
			<article class="page-article">
				<header>
					<h1>{title}</h1>
					<p class="subtitle">{description}</p>
				</header>

				<div class="content">
					<p>
						A log of books, articles, and research papers I'm reading or have read. Notes and summaries coming soon.
					</p>

					{readingData.sections.map((section) => (
						<>
							<h2>{section.name}</h2>
							<ul class="reading-list">
								{section.books.map((book) => (
									<li>
										<span class="title">{book.title}</span>
										<span class="author">{book.author}</span>
									</li>
								))}
							</ul>
						</>
					))}

					<div style="margin-top: 2rem; padding: 1rem; border-left: 2px solid var(--border);">
						<p style="margin: 0;">
							Want to recommend something? <a href="https://adrianvillanueva.com" target="_blank" rel="noopener">Let me know</a>
						</p>
					</div>
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>

<style>
	main {
		max-width: 680px;
		margin: 0 auto;
		padding: 2rem 1.5rem;
	}

	.page-article header {
		margin-bottom: 2rem;
	}

	.page-article h1 {
		margin: 0 0 0.5rem 0;
	}

	.subtitle {
		color: var(--muted);
		margin: 0;
	}

	.content {
		line-height: 1.8;
		color: var(--fg);
	}

	.content h2 {
		margin-top: 2rem;
		margin-bottom: 1rem;
		border-bottom: 1px solid var(--border);
		padding-bottom: 0.5rem;
	}

	.reading-list {
		list-style: none;
		padding: 0;
	}

	.reading-list li {
		margin-bottom: 1rem;
		padding: 1rem;
		border-left: 2px solid var(--border);
		display: flex;
		flex-direction: column;
		gap: 0.25rem;
	}

	.title {
		font-weight: 500;
		color: var(--fg);
	}

	.author {
		color: var(--muted);
		font-size: 0.9rem;
	}

	.content a {
		color: var(--fg);
		text-decoration: underline;
		text-decoration-color: var(--border);
	}

	.content a:hover {
		color: var(--bg);
		background: var(--fg);
		text-decoration: none;
	}

	.muted {
		color: var(--muted);
	}
</style>
